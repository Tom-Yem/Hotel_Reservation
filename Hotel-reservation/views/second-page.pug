doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  meta(http-equiv='X-UA-Compatible' content='ie=edge')
  title Reserve
  style.
    html{
    background-image:url('/static/hotel1.jpg');
    background-position: center;
    background-attachment: fixed;
    background-repeat: no-repeat;
    background-size: cover;  
    }
    #base-container{
    overflow: auto;
    }
    .element-container{
    margin-bottom: 20px;
    overflow: auto;
    border-bottom:2px solid black;
    background-color:white;
    }
    #btn{
    border: none;
    background-color:rgb(75, 206, 75);
    color:white;
    padding: 10px;
    outline: none;
    }
    #image{
    float: left;
    width: 10%;
    }
#base-container
  - const list_rooms=rooms_list 
  for room in list_rooms
    .element-container
      img#image(src='/static/door.jpg' alt='door')
      h4
        | Room:#{room.room_number} 
      span
      h4
        | Specials:#{room.specials} 
      span
      h4
        | Price:#{room.price} 
      span
      button#btn( class=room.room_number onclick='reserver(this)') Reserve
script(src='/static/second-page.js')
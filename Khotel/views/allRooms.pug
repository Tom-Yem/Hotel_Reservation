doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  meta(http-equiv='X-UA-Compatible' content='ie=edge')
  link(rel='shortcut icon' href='/static/favicon.ico' type='image/x-icon')
  link(rel='icon' href='/static/favicon.ico' type='image/x-icon')
  title All Rooms
  style.
    body{
      background-color:rgb(168, 164, 164);
    }
    button:hover{
     cursor:pointer;
    }
    table{
    background-color:rgb(34, 124, 133);
    }
    caption{
    font-family: fantasy;
    font-size:30px;
    background-color:rgb(136, 15, 52);
    color:rgba(255, 255, 255, 0.8);
    }
    table, th, td {
    border: 1px solid black;
    border-collapse:collapse;
    }
    td:hover,th:hover{
    background-color:rgb(3, 69, 75);    
    }
    th, td {
    text-align:center;
    color:white;
    padding:25px;
    }
    #modify_section{
      margin-top:12px;   
    }
    #update,#delete,#add{
      padding:12px;
      background-color:green;
      color:white;
    }
    #delete,#add{
     margin-left:50px; 
    }
    .room_num{
      margin-left:5px;
      padding:12px;  
    }
    #lastRow td{
      padding:0;  
    }
    #addrow{
      width:100%;
      padding:10px;
      font-size:50px;
      background-color:rgb(34, 124, 133);
      border:none;  
    }
    @media only screen and (max-width:600px){
      input{
        display:inline-block;
        width:90%;
        margin-left:0;}
      #delete,#add{
        margin-left:0;
      } 
    }
table#table(style='width:100%')
  caption All-Rooms
  tr
    th RoomNumber
    th Kind
    th Specials
    th Price
  for room in allrooms
    tr
      td(contenteditable='false') #{room.room_number}
      td(contenteditable='true') #{room.kind}
      td(contenteditable='true') #{room.specials}
      td(contenteditable='true') #{room.price}
  tr#lastRow
    td
      button#addrow(onclick='addRow()') +    
div(id='modify_section')
  button#update(onclick='updater()') Update
  input#upbtn(type='number' min='1' class='room_num' placeholder='row number')
  button#delete(onclick='deleteRoom()') Delete
  input#delbtn(type='number' min='1' class='room_num' placeholder='row number')
  button#add(onclick='addRoom()') Add
  input#addbtn(type='number' min='1' class='room_num' placeholder='row number')
script(src='/static/fetchumd')  
script(src='/static/allRooms.js')